{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "../../dist/apps/nestupms",
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "e2e/app/token.spec.ts", "e2e/app/token.e2e-spec.ts"],
  "exclude": [
    "../../node_modules",
    "**/e2e/**/*",
    "node_modules/@types/jasmine/**/*"
  ]
}

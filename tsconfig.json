{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@notadd/*": [
        "libs/*"
      ],
      "@notadd/nest": [
        "xplat/nest/index.ts"
      ],
      "@notadd/nest/*": [
        "xplat/nest/*"
      ],
      "@notadd/web": [
        "xplat/web/index.ts"
      ],
      "@notadd/web/*": [
        "xplat/web/*"
      ],
      "@notadd/decorator": [
        "libs/decorator/src/index.ts"
      ],
      "@notadd/xplat/auth": [
        "libs/xplat/auth/src/index.ts"
      ]
    },
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}